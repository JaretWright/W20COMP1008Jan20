<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameOfWarViewController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="The Card Game of War">
               <font>
                  <Font size="66.0" />
               </font>
            </Label>
            <HBox prefHeight="415.0" prefWidth="1000.0" spacing="20.0">
               <children>
                  <ImageView fx:id="p1backOfDeckImageView" fitHeight="400.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="p1CurrentCardImageVIew" fitHeight="400.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="p2CurrentCardImageView" fitHeight="400.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="p2backOfDeckImageView" fitHeight="400.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="80.0">
               <children>
                  <Label fx:id="p1CardCountLabel" text="Player 1 Count: ">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" text="Play Hand">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Button>
                  <Label fx:id="p2CardCountLabel" text="Player 2 Count: ">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
